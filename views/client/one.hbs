<h2>{{client.name}}</h2>
{{!--  // CORRECT TABLE LAYOUT IN HTML  --}}
<table class="header-of-left">
    <tbody>
    <tr>
        <th>
            E-mail:
        </th>
        <td>
            <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
        </td>

    </tr>
    <tr>
        <th>
            Name:
        </th>
        <td>
            {{client.name}}
        </td>
    </tr>
    <tr>
        <th>
            Next contact at:
        </th>
        <td>
            {{client.nextContactAt}}
        </td>
    </tr>
    {{#if client.notes}}
        <tr>
            <th>
                Notes:
            </th>
            <td>
                {{client.notes}}
            </td>
        </tr>
    {{/if}}
    </tbody>
</table>
<p>
<form method="GET" action="/client/form/edit/{{client.id}}">
    <button type="submit">Edit</button>
</form>
</p>

<p>
    {{> go-to-clients}}
</p>


